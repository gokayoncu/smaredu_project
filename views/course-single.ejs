<%- include('partials/_header') %>
<%- include('partials/_nav') %>
	<div class="all-title-box">
		<div class="container text-center">
			<h1><%= course.name %><span class="m_1">Lorem Ipsum dolroin gravida nibh vel velit.</span></h1>
		</div>
	</div>
	
    <div id="overviews" class="section wb">
        <div class="container">
            <div class="row"> 
                <div class="col-lg-9 blog-post-single">
                    <div class="blog-item">
						<div class="image-blog">
							<img src="/images/blog_single.jpg" alt="" class="img-fluid">
						</div>
						<div class="post-content">
							<div class="post-date">
								<% if(loginUser && loginUser.role === 'student' && !loginUser.courses.includes(course._id)) { %>
									<form action="/courses/enroll" method="POST">
										<input type="hidden" name="course_id" value="<%= course._id %>">
										<button type="submit" class="btn btn-sm btn-warning text-white">ENROLLED</button>
									</form>
								<% } %>
							</div>
							<div class="meta-info-blog">
								<span><i class="fa fa-calendar pr-2"></i><span class="day"><%= new Date(course.createdAt).getDate().toString().padStart(2, '0') %></span>
									<span class="month"><%= new Date(course.createdAt).toLocaleString('default', { month: 'short' }) %></span></span>
							</div>
							<div class="blog-title">
								<h2><a href="#" title=""><%= course.name %></a></h2>
							</div>
							<div class="blog-desc">
								<blockquote class="default"><%= course.description %></blockquote>
							</div>							
						</div>
					</div>
					
					<div class="blog-author">
						<div class="author-bio">
							<h3 class="author_name"><a href="#"><%= course.user.name || 'Unknown' %></a></h3>
							<h5><%= course.user.role.charAt(0).toUpperCase() + course.user.role.slice(1)%> at <a href="#">SmartEDU</a></h5>
							<p class="author_det">
								Lorem ipsum dolor sit amet, consectetur adip, sed do eiusmod tempor incididunt  ut aut reiciendise voluptat maiores alias consequaturs aut perferendis doloribus omnis saperet docendi nec, eos ea alii molestiae aliquand.
							</p>
						</div>
						<div class="author-desc">
							<img src="/images/author.jpg" alt="about author">
							<ul class="author-social">
								<li><a href="#"><i class="fa fa-facebook"></i></a></li>
								<li><a href="#"><i class="fa fa-twitter"></i></a></li>
								<li><a href="#"><i class="fa fa-skype"></i></a></li>
							</ul>
						</div>
					</div>
					
                </div><!-- end col -->
				<div class="col-lg-3 col-12 right-single">
					<div class="widget-search">
						<div class="site-search-area">
						  <form method="GET" id="site-searchform" action="/courses">
							<div>
							  <input
								class="input-text form-control"
								name="search"
								id="search"
								placeholder="Search ..."
								type="text"
							  />
							  <button id="searchsubmit" value="Search" type="submit" ></button>
							</div>
						  </form>
						</div>
					  </div>
					  <div class="widget-categories">
						<h3 class="widget-title">Categories</h3>
						  <% for (let i=0; i< categories.length; i++) { %>
						  <li><a href="/courses?categories=<%= categories[i].slug %>"><%= categories[i].name %></a></li>
						  <% } %>	
					  </div>
				</div>
            </div><!-- end row -->
        </div><!-- end container -->
    </div><!-- end section -->
<%- include('partials/_footer') %>